<!DOCTYPE html>
<html>
<head>
    <title>Amadon.com Spend more. Smile less.</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Font Awesome -->
    <link rel="stylesheet" href="/stylesheets/images/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <nav class="navbar">
        <a class="navbar-brand" href="/">
            <img src="/stylesheets/images/amadon.png" alt="Company Logo" id="logo" height="30">
        </a>
            <a class="nav-link" href="shop.ejs">Shop</a>
    
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-user"></i>
                </a>
                <ul class="dropdown-menu">
                    <% if (login) { %>
                        <li><a class="dropdown-item" href="../user/profile.ejs">Profile</a></li>
                        <li><a class="dropdown-item" href="../user/signout.ejs">Sign Out</a></li>
                    <% } else { %>
                        <li><a class="dropdown-item" href="../user/signin.ejs">Sign In</a></li>
                        <li><a class="dropdown-item" href="../user/signup.ejs">Sign Up</a></li>
                    <% } %>
                </ul>
            </div>
            <a class="navbar-brand" href="cart.ejs">
                <i class="fas fa-shopping-cart"></i>
                <span class="badge"><%= session.cart && session.cart.amount ? session.cart.amount : 0 %></span>
            </a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 offset-md-3">
                <% if (products && products.length > 0) { %>
                    <ul class="list-group">
                        <% products.forEach(function(product) { %>
                            <li class="list-group-item">
                                <strong class="badge text-dark"><%= product.qty %></strong>
                                <strong><%= product.item.title %></strong>
                                <span class="label label-success">$
                                    <%= product.item.price %>
                                </span>
                                <div class="btn-group">
                                    <button class="button btn btn-primary btn-xs dropdown-toggle" type="button" data-bs-toggle="dropdown">Edit<span class="caret"></span></button>

                                    <ul class="dropdown-menu">
                                        <li><a href="#">Remove 1</a></li>
                                        <li><a href="#">Remove All</a></li>
                                    </ul>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                    <div class="row">
                        <div class="col-sm-6 offset-md-3">
                            <strong>Total: $
                                <%= session.cart.total %></strong>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6 offset-md-3">
                            <a href = "/checkout.ejs"><button" class="btn btn-success">Checkout</button></a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <div class="col-sm-6 offset-md-3">
                            <h2>No Items In Cart</h2>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
